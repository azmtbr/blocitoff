<% if user_signed_in? %>
  <h2>User Profile<small> for <%=current_user.name%></small></h2>


  <small><%=current_user.email %></small>

  <div class="media-heading">
    <h3><u>Your TODO List</u></h3>
  </div>

  <br>
  <%= render @items %>
  <br>


  <button type="button" class="btn-btn primary"><%= link_to "Create new todo item", new_item_path %></button>
  <button type="button" class="btn-btn primary"><%= link_to "Edit Profile", edit_user_registration_path %></button>
  <br>
  <br>
<% else %>
  <%= flash[:error] = "This profile is private." %>
  <%= link_to "Sign In", new_user_session_path %> or
  <%= link_to "Sign Up", new_user_registration_path %>
<% end %>
